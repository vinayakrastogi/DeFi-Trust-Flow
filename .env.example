# ─── Copy this file to .env.local ─────────────────────────
# cp .env.example .env.local

# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-to-a-random-secret"

# WalletConnect — get a free project ID at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# Blockchain — Sepolia Testnet
NEXT_PUBLIC_CHAIN_ID="11155111"
NEXT_PUBLIC_RPC_URL="https://ethereum-sepolia-rpc.publicnode.com"

# Deployed Contract Address (Sepolia)
NEXT_PUBLIC_LENDING_CONTRACT_ADDRESS="0x5fc5725D3adFbC281bCD387117982eA38581e3D4"

# Deployer Private Key — only needed if you're deploying a new contract
# NEVER use a wallet with real funds!
DEPLOYER_PRIVATE_KEY=""

# Etherscan API Key (optional, for contract verification)
ETHERSCAN_API_KEY=""
